.footer
	background-color: #191919
	min-height 318px
	color #fefefe
	padding-left 10.9375%
	padding-right 10.9375%
	overflow hidden
	@media screen and (max-width: 1670px)
		padding-left 7%
		padding-right 7%
	@media screen and (max-width: 1285px)
		padding-left 1%
		padding-right 1%
	&__block
		margin-top 50px
		margin-right 0
