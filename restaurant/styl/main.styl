color-headerText = #fff
@font-face{
  font-family: 'yeseva-one';
  src: url(../fonts/yeseva/YesevaOne-Regular_v2.otf);
}

@font-face{
  font-family: 'lato';
  src: url(../fonts/lato/Lato-Regular.ttf);
}
body
	font-size 16px
.wrap
	width 90%
	max-width 1600px
	margin 0 auto
	overflow hidden
.header
	height 751px
	padding-left 10.9375%
	padding-right 10.9375%
	background: url(../img/header_bg.png), url(../img/header_top_bg.png) top
	background-size cover
	text-align center
	@media screen and (max-width: 1570px)
		padding-left 7%
		padding-right 7%
	@media screen and (max-width: 1440px)
		padding-left 1%
		padding-right 1%
	@media screen and (max-width: 825px)
		height 800px
	@media screen and (max-width: 425px)
		height 100%
		padding-bottom 20px
	&__list
		list-style none
		float right
		@media screen and (max-width: 1150px)
			float left
			margin-top 35px
	&__itemList
		display inline-block
		height 70px
		padding-top 42px
		margin-left 53px
		border-top 3px solid transparent
		&:hover
			border-top 3px solid #c7c4bb
		@media screen and (max-width: 1255px)
			margin-left 33px
		@media screen and (max-width: 1150px)
			padding-top 22px
		@media screen and (max-width: 825px)
			margin-left 73px
		@media screen and (max-width: 750px)
			margin-left 43px
		@media screen and (max-width: 425px)
			display block
			margin-left 50%
		@media screen and (max-width: 350px)
			margin-left 40%
	&__link
		text-decoration none
		text-transform capitalize
		color color-headerText
		font-size 1.3125em
	&__socials
		float right
		margin-top 50px
		margin-left 20px
		@media screen and (max-width: 350px)
			float left
			margin-left 35%
	&__title
		color color-headerText
		font-size: 5.625em
		display inline-block
		margin-top 10%
		font-family yeseva-one
		@media screen and (max-width: 1270px)
			font-size 4.625em
		@media screen and (max-width: 950px)
			font-size 3.25em
		@media screen and (max-width: 650px)
			font-size 2em
	&__decoration
		display block
		margin-left: 38%
		@media screen and (max-width: 1150px)
			margin-left 30%
		@media screen and (max-width: 655px)
			margin-left 20%
		@media screen and (max-width: 425px)
			margin-left 5%
		@media screen and (max-width: 350px)
			margin-left 0
	&__imagelogo
		float left
		margin-top 5px
		@media screen and (max-width: 1270px)
			display inline-block
			max-height 70px
		@media screen and (max-width: 350px)
			margin-left 20%
	&__input
		padding 17px 53px
		color color-headerText
		border none
		opacity: .8
		font-family lato
		@media screen and (max-width: 655px)
			display block
			margin-left 30%
			margin-top: 15px
		@media screen and (max-width: 425px)
			margin-left 15%
			
		&-book
			background-color: #130f10
			margin-right 28px
		&-menu
			background-color: #d1b938
.main1
	min-height 710px
	background url(../img/main_1_bg.png)
	background-size cover
	padding-left 10.9375%
	padding-right 10.9375%
	@media screen and (max-width: 1570px)
		padding-left 7%
		padding-right 7%
	@media screen and (max-width: 1440px)
		padding-left 1%
		padding-right 1%
	@media screen and (max-width: 1250px)
		min-height 1420px
	@media screen and (max-width: 550px)
		min-height 1300px
	&__left
		float left
		max-width 412px
		overflow hidden
		text-align center
		margin-top 100px
		margin-right 63px
		@media screen and (max-width: 1250px)
			margin-left 30%
		@media screen and (max-width: 900px)
			margin-left 22%
		@media screen and (max-width: 850px)
			margin-left 12%
		@media screen and (max-width: 650px)
			margin-left 2%
		@media screen and (max-width: 520px)
			max-width 350px
	&__title
		font-family yeseva-one
		color #cc9900
		font-size 2.25em
		line-height 1.5em
		font-weight 400
	&__text
		font-family lato
		display inline-block
		max-width 412px
		text-align center
		margin-top 28px
		margin-bottom 50px
		font-size 1em
		line-height 1.5em
	&__cook
		margin-top 50px
	&__plate
		margin-top 70px
		display inline-block
		float right
		@media screen and (max-width: 1250px)
			display block
			float left
			margin-left 25%
		@media screen and (max-width: 900px)
			margin-left 15%
		@media screen and (max-width: 850px)
			margin-left 7%
		@media screen and (max-width: 800px)
			margin-left 2%
		@media screen and (max-width: 720px)
			width 500px
			margin-left 10%
		@media screen and (max-width: 650px)
			margin-left 2%
		@media screen and (max-width: 600px)
			width 450px
		@media screen and (max-width: 550px)
			width 400px
		@media screen and (max-width: 460px)
			width 350px
		@media screen and (max-width: 460px)
			width 300px
.main2
	height 759px
	background url(../img/main2_bg.png) no-repeat
	color #fff
	padding-left 50%
	padding-top 5%
	@media screen and (max-width: 1250px)
		padding-left 30%
	@media screen and (max-width: 1100px)
		padding-left 22%
	@media screen and (max-width: 850px)
		padding-left 15%
	@media screen and (max-width: 720px)
		padding-left 9%
	@media screen and (max-width: 670px)
