form
	text-align left
	&__btn
		text-align center
.form-group
	display flex
	flex-direction row
	@media screen and (max-width: 600px)
		display block
.formRow
	display inline-block
	width 50%
	padding-left 10%
	@media screen and (max-width: 600px)
		display block
		width 100%
	label
		width 65%
		display block
		text-align left
	input
		width 70%
		display block
		@media screen and (max-width: 600px)
			width 85%
.form__btn
	margin-left 30%
	margin-top 30px
	width 200px
	height 33px
	color #fff
	background-color #c9a131
