.menuItem
	max-width 450px
	text-align center
	display inline-block
	margin-right 164px
	margin-top 70px
	@media screen and (max-width: 550px)
		max-width 400px
	@media screen and (max-width: 550px)
		max-width 320px
	@media screen and (max-width: 440px)
		max-width 270px
	&__title
		color #cc9900
		font-size 2.25em
		line-height 1.5em
		font-family yeseva-one
	&__divider
		display inline
	&__subTitle
		font-size 1.3125em
		color #c89f2d
		float left
		display inline-block
	&__price
		font-size 1.3125em
		color #c89f2d
		float right
		display inline-block
	&__description
		color #4c4c4c
		font-size 1em
		line-height 1.5em
	&__subItemrow
		margin-top 33px
		&-special
			border 1px solid #c89f2d
			padding 5px
			position relative
			&:before
				content 'Special'
				position absolute
				right 0
				top -22px
				background url(../img/special_row.png)
				width 69px
				height 22px
				display block
				font-size 0.875em
				color #f8fafa
				font-family lato
